{
	"name": "branchpilot",
	"version": "0.4.6",
	"author": "Alec Rust",
	"license": "MIT",
	"description": "Local-first scheduled PRs from Markdown tickets",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/AlecRust/branchpilot.git"
	},
	"homepage": "https://github.com/AlecRust/branchpilot#readme",
	"bugs": {
		"url": "https://github.com/AlecRust/branchpilot/issues"
	},
	"type": "module",
	"files": [
		"dist"
	],
	"bin": {
		"branchpilot": "dist/cli.mjs"
	},
	"engines": {
		"node": ">=20.19.4"
	},
	"scripts": {
		"dev": "tsx watch src/cli.ts",
		"build": "tsup",
		"start": "node dist/cli.mjs",
		"lint": "biome lint .",
		"lint:check": "biome lint",
		"format": "biome format --write .",
		"format:check": "biome format",
		"typecheck": "tsc --noEmit",
		"check": "biome check --write . && tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"doctor": "node dist/cli.mjs doctor",
		"release": "GITHUB_TOKEN=$(gh auth token) release-it --ci"
	},
	"keywords": [
		"git",
		"github",
		"pr",
		"schedule",
		"cli",
		"markdown"
	],
	"dependencies": {
		"colorette": "^2.0.20",
		"commander": "^14.0.0",
		"execa": "^9.6.0",
		"gray-matter": "^4.0.3",
		"luxon": "^3.7.1",
		"toml": "^3.0.0",
		"which": "^5.0.0",
		"zod": "^4.0.17"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@release-it/bumper": "^7.0.5",
		"@tsconfig/node-lts": "^22.0.2",
		"@types/luxon": "^3.7.1",
		"@types/node": "^24.2.1",
		"@types/which": "^3.0.4",
		"@vitest/coverage-v8": "^3.2.4",
		"git-cliff": "^2.10.0",
		"lefthook": "^1.12.2",
		"release-it": "^19.0.4",
		"tsup": "^8.5.0",
		"tsx": "^4.20.3",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}
