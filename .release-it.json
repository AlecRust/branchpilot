{
	"git": {
		"commitMessage": "chore(release): v${version}",
		"requireBranch": "main",
		"requireCleanWorkingDir": true,
		"requireUpstream": true,
		"tagName": "v${version}"
	},
	"github": {
		"release": false
	},
	"npm": {
		"publish": false
	},
	"hooks": {
		"before:init": ["npm run check"],
		"after:bump": ["git cliff --config cliff.toml -o CHANGELOG.md --tag v${version}", "git add CHANGELOG.md"],
		"after:release": "Successfully tagged ${name} v${version}. CI will handle publishing."
	}
}
