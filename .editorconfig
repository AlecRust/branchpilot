# editorconfig.org
root = true

[*]
charset = utf-8
indent_style = tab
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

# Markdown trailing whitespaces can be meaningful
[*.md]
trim_trailing_whitespace = false

# YAML forbids tabs
[*.{yml,yaml}]
indent_style = space
