{
	"git": {
		"commitMessage": "chore(release): v${version}",
		"requireBranch": "main",
		"requireCleanWorkingDir": true,
		"requireUpstream": true,
		"tagName": "v${version}"
	},
	"github": {
		"release": true,
		"releaseName": "v${version}",
		"releaseNotes": "cat .release-notes.md"
	},
	"npm": {
		"publish": true
	},
	"hooks": {
		"before:init": ["npm run lint", "npm run typecheck", "npm test"],
		"after:bump": [
			"npm run build",
			"git cliff --config cliff.toml -o CHANGELOG.md --tag v${version}",
			"git add CHANGELOG.md",
			"git cliff ${latestTag}..v${version} --strip header | tail -n +3 > .release-notes.md"
		],
		"after:release": [
			"rm -f .release-notes.md",
			"echo Successfully released ${name} v${version} to ${repo.repository}."
		]
	}
}
