{
	"name": "branchpilot",
	"version": "0.1.0",
	"author": "Alec Rust",
	"license": "MIT",
	"description": "Local-first scheduled PRs from Markdown tickets",
	"type": "module",
	"bin": {
		"branchpilot": "./dist/cli.mjs"
	},
	"engines": {
		"node": ">=20.11"
	},
	"scripts": {
		"dev": "tsx watch src/cli.ts",
		"build": "tsup",
		"start": "node dist/cli.mjs",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"typecheck": "tsc --noEmit",
		"check": "biome check --write . && tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"doctor": "node dist/cli.mjs doctor"
	},
	"keywords": [
		"git",
		"github",
		"pr",
		"schedule",
		"cli",
		"markdown"
	],
	"dependencies": {
		"colorette": "^2.0.20",
		"execa": "^9.6.0",
		"gray-matter": "^4.0.3",
		"luxon": "^3.7.1",
		"toml": "^3.0.0",
		"which": "^5.0.0",
		"yargs": "^18.0.0",
		"zod": "^4.0.17"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@tsconfig/node-lts": "^22.0.2",
		"@types/luxon": "^3.7.1",
		"@types/node": "^24.2.1",
		"@types/which": "^3.0.4",
		"@types/yargs": "^17.0.33",
		"@vitest/coverage-v8": "^3.2.4",
		"tsup": "^8.5.0",
		"tsx": "^4.20.3",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}
